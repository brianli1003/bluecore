	<script type="text/javascript">
			$(document).ready(function() {
                $.ajaxSetup({ cache: true });
			    $.getScript('//connect.facebook.net/en_US/sdk.js',
			        function() {
			            FB.init({
                            appId: '1678843819085175',
			                version: 'v2.9' // or v2.1, v2.2, v2.3, ...
			            });
			            $('#loginbutton,#feedbutton').removeAttr('disabled');
			        });


			    $("#btnClick").click(function() {
			        //FB.api('/me/feed', 'post', {message: 'Hello, world!'}); 

			        var message = $("#txtMessage").val();
			        var urlString = "https://graph.facebook.com/v2.9/" + localStorage.userId + "/feed";

			        $.ajax({
			            method: "POST",
			            url: urlString,
			            data: {
			                access_token: localStorage.accessToken,
			                message: message,
			                with_tags: {
			                    data: [
			                        {
			                            "id": "AaIJRu-peS0kGu193sqYTY4FVYDd2EnXCmkNvQLd68pJG43tmtm3a91AqYTkbS2mdE2YIYS55xKiJCM2s5T1WfxNUVKNNoR7CY-y1uqKbn0vhw",
			                            "name": "Nguyen Van A",
			                            "picture": {
			                                "data": {
			                                    "is_silhouette": true,
			                                    "url": "https://scontent.xx.fbcdn.net/v/t1.0-1/c15.0.50.50/p50x50/10354686_10150004552801856_220367501106153455_n.jpg?oh=99f7a23b27b7b285107a17ae7a3003da&oe=59AF882F"
			                                }
			                            }
			                        }
			                    ]
			                },
			                fields: "created_time,from,id,message,permalink_url,shares"
			            },
			            success: function(response) {
			                console.log("Post successfully!");
			                console.log(response);
			                localStorage.postId = response.id;
			            }
			        });
			    });

			    $("#btnGet").click(function(){
                    var urlString = "https://graph.facebook.com/v2.9/" + localStorage.postId;

			        $.ajax({
			            method: "GET",
			            url: urlString,
			            data: {
			                access_token: localStorage.accessToken
			            },
			            success: function(response) {
			                console.log("Get successfully!");
			                console.log(response);
			            }
			        });
			    });

			    $("#btnDelete").click(function() {
			        var urlString = "https://graph.facebook.com/v2.9/" + localStorage.postId;

			        $.ajax({
			            method: "DELETE",
			            url: urlString,
			            data: {
			                access_token: localStorage.accessToken
			            },
			            success: function(response) {
			                console.log("Delete successfully!");
			                console.log(response);
			            }
			        });
			    });

			    $("#btnTag").click(function() {
			        var urlString = "https://graph.facebook.com/v2.9/" + + localStorage.userId + "/taggable_friends"

			        $.ajax({
			            method: "GET",
			            url: urlString,
			            data: {
			                access_token: localStorage.accessToken
			            },
			            success: function(response) {
			                console.log("Tag successfully!");
			                console.log(response);
			            }
			        });
			    });

			    $("#btnAccount").click(function() {
			        var urlString = "https://graph.facebook.com/v2.9/" + + localStorage.userId + "/accounts"

			        $.ajax({
			            method: "GET",
			            url: urlString,
			            data: {
			                access_token: localStorage.accessToken
			            },
			            success: function(response) {
			                console.log("Accounts successfully!");
			                console.log(response);
			            }
			        });
			    });
                
                $("#btnLogin").click(function(){
                    // Only works after `FB.init` is called
                    FB.getLoginStatus(function(response) {
                      if (response.status === 'connected') {
                        console.log('Logged in.');
                        localStorage.clear();
                        localStorage.accessToken = response.authResponse.accessToken;
                        localStorage.userId = response.authResponse.userID;
                      }
                      else {
                        FB.login(function(response){
                            localStorage.clear();
                            localStorage.accessToken = response.authResponse.accessToken;
                            localStorage.userId = response.authResponse.userID;
                        }, [{scope: 'publish_actions'},{scope: 'user_posts'},{scope: 'user_friends'}]);
                      }
                    });
                });
			});
	</script>
</body>
</html>
